<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
      <template id="trial_balance_borders" inherit_id="account_reports.main_template">
        <xpath expr="//div[@class='table-responsive']" position="replace">

            <div class="table-responsive">
                <table class="o_account_reports_table table-hover trial_balance_borders-table">
                    <t t-call="{{model._get_templates()['main_table_header_template']}}"/>
                    <tbody>
                        <t t-if="lines.get('lines')">
                            <t t-call="{{model._get_templates()['line_template']}}"/>
                        </t>
                    </tbody>
                </table>
            </div>

        </xpath>
      </template>
    </data>
</odoo>