<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
          <!-- inherit the pdf template to make changes on it  -->
              <template id="custom_trail_balance" name="template_name" inherit_id="account_reports.line_template">
                <xpath expr="." position="inside">
                    <link rel="stylesheet" href="/trial_balance_borders/static/src/css/style.css"/>
                </xpath>

                <xpath expr="//td[1]" position="attributes">
                  <attribute name="style">border: 1px black solid;</attribute>
                </xpath>

              </template>

  </data>
</odoo>