<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_picking_form_view" model="ir.ui.view">
            <field name="name">stock.picking.form.view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_validate'][hasclass('o_btn_validate')]" position="attributes">
                    <attribute name="groups">stock.group_stock_manager,inventory_validation.group_location_manager_it</attribute>
                    <attribute name="attrs">{'invisible': ['|', ('state', 'in', ('waiting','confirmed', 'sent')), ('show_validate', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='button_validate'][hasclass('oe_highlight')]" position="attributes">
                    <attribute name="groups">stock.group_stock_manager,inventory_validation.group_location_manager_it</attribute>
                    <attribute name="attrs">{'invisible': ['|', ('state', 'not in', ('waiting', 'confirmed', 'sent')), ('show_validate', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="button_sent" attrs="{'invisible': ['|', ('state', 'not in', ('draft', 'assigned')), ('picking_type_code', '!=', 'internal')]}" string="Sent" type="object" groups="stock.group_stock_manager,inventory_validation.group_location_manager_it" class="oe_highlight"/>
                    <button name="button_receive" attrs="{'invisible': ['|', ('state', 'not in', ('sent')), ('picking_type_code', '!=', 'internal')]}" string="Receive" type="object" groups="stock.group_stock_manager,inventory_validation.group_location_manager_it" class="oe_highlight"/>
                </xpath>
            </field>
        </record>
        <!-- is_quantity_done_editable -->

        <record id="view_picking_internal_search_inherit" model="ir.ui.view">
            <field name="name">stock.picking.internal.search.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search" />
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='draft']" position="after">
                    <filter name="to_send" string="Send" domain="[('state', '=', 'draft'), ('picking_type_code', '=', 'internal')]" help="To Send Internal Trf"/>
                    <filter name="sent" string="Sent" domain="[('state', '=', 'sent'), ('picking_type_code', '=', 'internal')]" help="Sent Internal Trf"/>
                    <filter name="to_receive" string="To Receive" domain="[('state', '=', 'sent'), ('picking_type_code', '=', 'internal')]" help="Receive Internal Trf"/>
                    <filter name="recived" string="Received" domain="[('state', '=', 'receive'), ('picking_type_code', '=', 'internal')]" help="Receive Internal Trf"/>
                </xpath>
            </field>
        </record>

         <record id="action_picking_tree_sent_custom" model="ir.actions.act_window">
            <field name="name">Sent Transfers</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,kanban,form,calendar</field>
            <field name="domain"></field>
            <field name="context">{'contact_display': 'partner_address', 'search_default_to_send': 1}</field>
            <field name="search_view_id" ref="stock.view_picking_internal_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new transfer
                </p><p>
                    Transfers allow you to move products from one location to another.
                </p>
            </field>
        </record>

         <record id="action_picking_tree_receive_custom" model="ir.actions.act_window">
            <field name="name">To Receive Transfers</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,kanban,form,calendar</field>
            <field name="domain"></field>
            <field name="context">{'contact_display': 'partner_address', 'search_default_to_receive': 1}</field>
            <field name="search_view_id" ref="stock.view_picking_internal_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new transfer
                </p><p>
                    Transfers allow you to move products from one location to another.
                </p>
            </field>
        </record>

        <record id="stock_picking_type_kanban_inh" model="ir.ui.view">
            <field name="name">stock.picking.form.view</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.stock_picking_type_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='count_picking_waiting']" position="after">
                    <field name="count_picking_sent" />
                    <field name="count_picking_receive" />
                </xpath>
                <xpath expr="//div[hasclass('o_kanban_primary_right')]" position="inside">
                    <div t-if="record.count_picking_sent.raw_value > 0" class="row">
                        <div class="col-9">
                            <a name="get_action_picking_tree_to_send" type="object">
                                To Send
                            </a>
                        </div>
                        <div class="col-3">
                            <field name="count_picking_sent"/>
                        </div>
                    </div>
                    <div t-if="record.count_picking_receive.raw_value > 0" class="row">
                        <div class="col-9">
                            <a name="get_action_picking_tree_to_receive" type="object">
                                To Receive
                            </a>
                        </div>
                        <div class="col-3">
                            <field name="count_picking_receive"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

