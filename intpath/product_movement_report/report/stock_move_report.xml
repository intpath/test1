<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="external_layout_move_report_header">
            <div class="header" style="font-size:12px">
                <div class="row">
                    <t t-set="o" t-value="user"/>
                    <div class="col-12 text-center">
                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 45px;" alt="Logo"/>
                    </div>
                </div>
                <div class="col-12 text-center">
                    <h4>Printing Date : <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/> </h4>
                </div>
                 <div class="col-12 text-center">
                    <div class="col-6">
                        <h4>From Date : <span t-esc="context.get('from_date_')"/> </h4>
                    </div>
                    <div class="col-6">
                        <h4>To Date : <span t-esc="context.get('to_date_')"/> </h4>
                    </div>
                </div>
            </div>
            <div class="article o_report_layout_standard">
                <t t-raw="0" />
            </div>
             <div t-attf-class="footer o_standard_footer o_company_#{o.company_id.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <!-- using the list-inline-item class from bootstrap causes weird behaviours in pdf report
                         adding d-inline class fixes the problem-->
                    <li t-if="o.company_id.phone" class="list-inline-item d-inline">Phone: <span t-field="o.company_id.phone"/></li>
                    <li t-if="o.company_id.email" class="list-inline-item d-inline">Email: <span t-field="o.company_id.email"/></li>
                    <li t-if="o.company_id.website" class="list-inline-item d-inline">Web: <span t-field="o.company_id.website"/></li>
                    <li t-if="o.company_id.vat" class="list-inline-item d-inline"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.company_id.vat"/></li>
                </ul>

                <div name="financial_infos">
                    <span t-field="o.company_id.report_footer"/>
                </div>

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
        </template>

        <template id="external_layout_product_moves_report">
            <t t-call="product_movement_report.external_layout_move_report_header" >
            <t t-raw="0" /></t>
        </template>

        <template id="report_stock_details_document">
            <t t-call="web.html_container">
                <t t-call="product_movement_report.external_layout_product_moves_report">
                    <div class="page">
                        <div class="oe_structure"/>
                          <table class="table table-sm o_main_table" style="font-size:12px">
                            <thead>
                                <tr t-att-class="'bg-200 font-weight-bold'" style="margin-top:4px;">
                                    <th style="border:2px solid black;" name="th_no" class="text-center">No</th>
                                    <th style="border:2px solid black;" name="th_no" class="text-center">Product</th>
                                    <th style="border:2px solid black;" name="th_no" class="text-center">Internal Reference</th>
                                    <th style="border:2px solid black;" name="th_no" class="text-center">Total Entered Quantity</th>
                                    <th style="border:2px solid black;" name="th_no" class="text-center">Total Out Quantity</th>
                                    <th style="border:2px solid black;" name="th_no" class="text-center">The Difference</th>
                                </tr>
                            </thead>
                            <t t-set="total_outgoing_products" t-value="0"/>
                            <t t-set="total_incoming_products" t-value="0"/>
                            <t t-set="total_incoming" t-value="0"/>
                            <t t-set="total_outgoing" t-value="0"/>
                            <t t-set="count" t-value="0"/>
                            <t t-set="products" t-value="docs.mapped('product_id')"/>
                            <!-- Prepate dictionary to print here or from python -->
                                <tr t-foreach="products" t-as="product">
                                    <t t-set="total_outgoing_products" t-value="docs.filtered(lambda line: line.product_id.id == product.id and line.picking_id.picking_type_id.sequence_code in ('OUT', 'POS'))"/>
                                    <t t-set="total_incoming_products" t-value="docs.filtered(lambda line: line.product_id.id == product.id and line.picking_id.picking_type_id.sequence_code == 'IN')"/>
                                    <t t-set="total_outgoing" t-value="sum(total_outgoing_products.mapped('product_uom_qty'))"/>
                                    <t t-set="total_incoming" t-value="sum(total_incoming_products.mapped('product_uom_qty'))"/>
                                    <t t-set="count" t-value="count + 1"/>
                                    <td class="text-center" style="border:2px solid black;"><span t-esc="count"/></td>
                                    <td class="text-center" style="border:2px solid black;"><span t-esc="product.display_name"/></td>
                                    <td class="text-center" style="border:2px solid black;"><span t-esc="product.default_code"/></td>
                                    <td class="text-center" style="border:2px solid black;"><span t-esc="total_outgoing"/></td>
                                    <td class="text-center" style="border:2px solid black;"><span t-esc="total_incoming"/></td>
                                    <td class="text-center" style="border:2px solid black;"><span t-esc="total_outgoing - total_incoming"/></td>
                                </tr>
                        </table>
                    </div>
                </t>
            </t>
        </template>

        <template id="report_product_moves_custom">
            <t t-call="web.html_container">
                <t t-set="lang" t-value="docs[0].company_id.partner_id.lang"/>
                <t t-call="product_movement_report.report_stock_details_document" t-lang="lang"/>
            </t>
        </template>

        <report
            id="product_stock_moves_total_report"
            model="stock.move"
            string="Total Product Moves Report"
            report_type="qweb-pdf"
            name="product_movement_report.report_product_moves_custom"
            file="product_movement_report.report_product_moves_custom"
            print_report_name="Prouct Moves Report"
        />
    </data>
</odoo>
