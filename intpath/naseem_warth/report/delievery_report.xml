<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- <template id="nw_invoice_ext" inherit_id="account.report_invoice_document" > -->
<!--    inherts the account = module name , report_invoice_document=id of the report   -->
    <template id="nw_delievery_ext" inherit_id="stock.report_picking" >

   <xpath expr="//div[@name='right_box']" position="before">
     <!-- how to incert the content by using xpath -->
          <div class="col‐auto mw‐100 text-left">
  
          <h4 t-if="'OUT' in o.name" class="text-left" > مستند اخراج مخزني </h4>
          <h4 t-if="'INT' in o.name" class="text-left" > مستند مناقلة مخزنية </h4>
          <h4 t-if="'IN/' in o.name" class="text-left" > مستند ادخال مخزني </h4>
          <h4 t-if="'POS' in o.name" class="text-left" > مستند إخراج مخزني pos </h4>
       
        </div>
      </xpath>

      <xpath expr="//div[@name='div_outgoing_address']" position="after">
     <!-- how to incert the content by using xpath -->
          <div t-if="o.partner_id" class="col‐auto mw‐100 mb‐2">
          <strong> اسم الزبون</strong>
          <p class="m‐8" style="text-align: center;" t-field="o.partner_id.name"> </p>
        </div>
        <div t-if="o.location_id" class="col‐auto mw‐100 mt-0 mb-2 ml-8 mr-8 text-center">
          <strong>   ---اسم المخزن</strong>
          <p class="m‐8 text-center" t-field="o.location_id.name"></p>
        </div>
      </xpath>

      <br/>
      <xpath expr="//table[@class='table table-sm']" position="after">
        <div class="d-flex">
          <div t-if="'stock_keeper' in o.location_id" class="text-center" style="margin-right: 60px;">
            <span style="font-size:20px;">اسم امين مخزن الارسال</span>
            <br/>
            <span style="font-size:20px;" t-field="o.location_id.stock_keeper"/>
          </div>
          <div t-if="'stock_keeper' in o.location_dest_id" class="text-center">
            <span style="font-size:20px;">اسم امين مخزن الاستلام</span>
            <br/>
            <span style="font-size:20px;" t-field="o.location_dest_id.stock_keeper"/>
          </div>
        </div>
      </xpath> 

    </template>
  </data>
</odoo>
