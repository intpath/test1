<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="work_order_report.workorder_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                        <h2>Work Order</h2>
                            <div class="row">
                                <div class="col-7">
                                    <p>Operation Name: <span t-field="o.name"/></p>
                                    <p>Work center: <span t-field="o.workcenter_id"/></p>
                                    <p>Manufacturing Order: <span t-field="o.production_id"/></p>
                                    <p>Proudct: <span t-field="o.production_id.product_id"/></p>
                                </div>
                                <div class="col-7">
                                    <p > Scheduled Start Date : <span t-field="o.date_planned_start"/></p>
                                    <p > Scheduled finished Date : <span t-field="o.date_planned_finished"/></p>
                                    <p > Expected Duration : <span t-field="o.duration_expected"/></p>
                                    <p > Duration : <span t-field="o.duration"/></p>
                                    <p > Status : <span t-field="o.state"/></p>
                                </div>
                            </div>
                        </div>
                        <table class="table table-sm o_main_table" style="page-break-after: always;">
                            <thead>
                                <tr>
                                    <th name="th_date_start">Start Date</th>
                                    <th name="th_date_end">End Date</th>
                                    <th name="th_duration">Duration</th>
                                    <th name="th_user_id">User </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="docs.time_ids" t-foreach="docs.time_ids" t-as="line">
                                    <tr>
                                        <td name="td_date_start">
                                            <p t-field="line.date_start"/>
                                        </td>
                                        <td name="th_date_end">
                                            <span align="center" t-field="line.date_end"/>
                                        </td>
                                        <td name="th_duration">
                                            <span align="center" t-field="line.duration"/>
                                        </td>
                                        <td name="th_user_ide">
                                            <span align="center" t-field="line.user_id"/>
                                        </td>
                                    </tr>
                                </t>
                        </tbody>
                        </table>

                    </t>
                </t>
            </t>
         </template>


        

        <report id="workorder_report"
                string="Work Order Report"
                model="mrp.workorder"
                report_type="qweb-pdf"
                name="work_order_report.workorder_report"
                file="work_order_report.workorder_report"
                print_report_name="'Work Order-%s' % (object.id)"
                />


    </data>
</odoo>