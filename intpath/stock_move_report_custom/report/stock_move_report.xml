<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="external_layout_move_report_header">
            <div class="header">
                <div class="row">
                    <div class="col-12 text-center">
                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 45px;" alt="Logo"/>
                    </div>
                </div>
                <div class="text-center col-12" style="border:1px solid black !important;">
                    <h4> حركة المخازن </h4>
                </div>
                <div class="col-12 text-center">
                    <h4>Printing Date : <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/> </h4>
                </div>
                <div class="col-12 text-center">
                    <div class="col-6">
                        <h4>From Date : <span t-esc="context.get('from_date')"/> </h4>
                    </div>
                    <div class="col-6">
                        <h4>To Date : <span t-esc="context.get('to_date')"/> </h4>
                    </div>
                </div>
            </div>
            <div class="article o_report_layout_standard">
                <t t-raw="0" />
            </div>
             <div t-attf-class="footer o_standard_footer o_company_#{o.company_id.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <!-- using the list-inline-item class from bootstrap causes weird behaviours in pdf report
                         adding d-inline class fixes the problem-->
                    <li t-if="o.company_id.phone" class="list-inline-item d-inline">Phone: <span t-field="o.company_id.phone"/></li>
                    <li t-if="o.company_id.email" class="list-inline-item d-inline">Email: <span t-field="o.company_id.email"/></li>
                    <li t-if="o.company_id.website" class="list-inline-item d-inline">Web: <span t-field="o.company_id.website"/></li>
                    <li t-if="o.company_id.vat" class="list-inline-item d-inline"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.company_id.vat"/></li>
                </ul>

                <div name="financial_infos">
                    <span t-field="o.company_id.report_footer"/>
                </div>

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
        </template>

        <template id="external_layout_move_report">
            <t t-call="stock_move_report_custom.external_layout_move_report_header" >
            <t t-raw="0" /></t>
        </template>

        <template id="report_stock_details_document">
            <t t-call="web.html_container">
                <t t-call="stock_move_report_custom.external_layout_move_report">
                    <div class="page">
                        <div class="oe_structure"/>
                          <table class="table table-sm o_main_table">
                            <thead>
                                <tr t-att-class="'bg-200 font-weight-bold'" style="margin-top:4px;">
                                    <th style="border:2px solid black;" name="th_no" class="text-center">Internal TRF.</th>
                                    <th style="border:2px solid black;" name="th_no" class="text-center">Outgoing</th>
                                    <th style="border:2px solid black;" name="th_no" class="text-center">POS</th>
                                    <th style="border:2px solid black;" name="th_no" class="text-center">Incoming</th>
                                    <th style="border:2px solid black;" name="th_no" class="text-center">Location</th>
                                    <th style="border:2px solid black;" name="th_no" class="text-center">From</th>
                                    <th style="border:2px solid black;" name="th_no" class="text-center">To</th>
                                    <th style="border:2px solid black;" name="th_no" class="text-center">Product</th>
                                    <th style="border:2px solid black;" name="th_no" class="text-center">Internal Reference</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="total_incoming" t-value="0"/>
                                <t t-set="total_outgoing" t-value="0"/>
                                <t t-set="total_internal" t-value="0"/>
                                <t t-set="total_pos" t-value="0"/>
                                <t t-foreach="docs" t-as="data">
                                    <tr>
                                        <td class="text-center" style="border:2px solid black;"><span/><span t-if="data.picking_id.picking_type_id.sequence_code == 'INT'" t-field="data.product_uom_qty"/></td>
                                        <td class="text-center" style="border:2px solid black;border-left:none;"><span t-if="data.picking_id.picking_type_id.sequence_code == 'OUT'" t-field="data.product_uom_qty"/></td>
                                        <td class="text-center" style="border:2px solid black;border-left:none;"><span t-if="data.picking_id.picking_type_id.sequence_code == 'POS'" t-field="data.product_uom_qty"/></td>
                                        <td class="text-center" style="border:2px solid black;border-left:none;"><span t-if="data.picking_id.picking_type_id.sequence_code == 'IN'" t-field="data.product_uom_qty"/></td>
                                        <td class="text-center" style="border:2px solid black;border-left:none;"><span t-field="data.picking_id.picking_type_id.warehouse_id.code"/></td>
                                        <td class="text-center" style="border:2px solid black;border-left:none;"><span t-field="data.location_id.display_name"/></td>
                                        <td class="text-center" style="border:2px solid black;border-left:none;"><span t-field="data.location_dest_id.display_name"/></td>
                                        <td class="text-center" style="border:2px solid black;border-left:none;"><span t-field="data.product_id.name"/></td>
                                        <td class="text-center" style="border:2px solid black;border-left:none;"><span t-field="data.product_id.default_code"/></td>
                                    </tr>
                                    <t t-if="data.picking_id.picking_type_id.sequence_code == 'INT'">
                                        <t t-set="total_internal" t-value="total_internal + data.product_uom_qty"/>
                                    </t>
                                    <t t-if="data.picking_id.picking_type_id.sequence_code == 'OUT'">
                                        <t t-set="total_outgoing" t-value="total_outgoing + data.product_uom_qty"/>
                                    </t>
                                    <t t-if="data.picking_id.picking_type_id.sequence_code == 'POS'">
                                        <t t-set="total_pos" t-value="total_pos + data.product_uom_qty"/>
                                    </t>
                                    <t t-if="data.picking_id.picking_type_id.sequence_code == 'IN'">
                                        <t t-set="total_incoming" t-value="total_incoming + data.product_uom_qty"/>
                                    </t>
                                </t>
                                <tr class="bg-200 font-weight-bold text-center">
                                    <td style="border:2px solid black;">
                                        <t t-esc="total_internal"/>
                                    </td>
                                    <td style="border:2px solid black;">
                                        <t t-esc="total_outgoing"/>
                                    </td>
                                    <td style="border:2px solid black;">
                                        <t t-esc="total_pos"/>
                                    </td>
                                    <td style="border:2px solid black;">
                                        <t t-esc="total_incoming"/>
                                    </td>
                                    <td style="border:2px solid black;">Total</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>

        <template id="report_stock_moves_custom">
            <t t-call="web.html_container">
                <t t-set="count" t-value="0"/>
                <t t-foreach="docs" t-as="o">
                    <t t-set="count" t-value="count + 1"/>
                    <t t-if="count == 1">
                        <t t-set="lang" t-value="o.company_id.partner_id.lang"/>
                        <t t-call="stock_move_report_custom.report_stock_details_document" t-lang="lang"/>
                    </t>
                </t>
            </t>
        </template>

        <report
            id="account_invoices_custom_without_payment"
            model="stock.move"
            string="Stock Move Report"
            report_type="qweb-pdf"
            name="stock_move_report_custom.report_stock_moves_custom"
            file="stock_move_report_custom.report_stock_moves_custom"
            print_report_name="Stock Moves Report"
        />
    </data>
</odoo>
