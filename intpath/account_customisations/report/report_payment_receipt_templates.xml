            <xpath expr="//table[hasclass('table', 'table-sm')]" position="after">
                <table class="table table-sm mt64">
                    <thead>
                        <tr>
                            <th><span>Date</span></th>
                            <th><span>Company</span></th>
                            <th><span>Journal Entry</span></th>
                            <th><span>Account</span></th>
                            <th><span>Label</span></th>
                            <th><span>Debit</span></th>
                            <th><span>Credit</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Was move_line_ids but payment model has no move_line_ids -->
                        <tr t-foreach="o.move_line_ids" t-as="jour">  
                            <td><span t-field="jour.date"/></td>
                            <td><span t-field="jour.company_id.name"/></td>
                            <td><span t-field="jour.move_id.name"/></td>
                            <td><span t-field="jour.account_id.display_name"/></td>
                            <td><span t-field="jour.name"/></td>
                            <td><span t-field="jour.debit"/></td>
                            <td><span t-field="jour.credit"/></td>
                        </tr>
                    </tbody>
                </table>
            </xpath>
         </template>
