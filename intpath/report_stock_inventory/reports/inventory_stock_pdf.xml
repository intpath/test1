<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_stock_pdf">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <br></br>
                    <div class="row mt32">
                        <div class="col-xs-3">
                            <strong>Date:</strong>
                            <t t-esc="inventory_date"/>
                        </div>
                    </div>
                    <t t-if="loc_name">
                        <div class="row mt32">
                            <div class="col-xs-3">
                                <strong>Location(s):</strong>
                                <t t-esc="loc_name"/>
                            </div>
                        </div>
                    </t>
                    <t t-if="categ_name">
                        <div class="row mt32">
                            <div class="col-xs-3">
                                <strong>Categories:</strong>
                                <t t-esc="categ_name"/>
                            </div>
                        </div>
                    </t>
                </div>








                <t t-if="locations_info">
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th align="left">Location Name</th>
                                <th align="left">Quantity</th>
                                <th align="left">Products Count</th>
                                <th align="left">Ref</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="locations_info" t-as="line">
                                <td align="left">
                                    <span t-esc="line['location_name']"/>
                                </td>
                                <td align="left">
                                    <span t-esc="line['total_quant']"/>
                                </td>
                                <td align="left">
                                    <span t-esc="line['line_count']"/>
                                </td>
                                <td align="left">
                                    <span t-esc="line['ref']"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </t>








                <t t-if="docs">
                    <table class="table table-condensed" t-if="docs[0]['include_lines']">
                        <thead>
                            <tr>
                                <th align="left">SN0</th>
                                <th align="left">Internal Reference</th>
                                <th align="left">Product</th>
                                <th align="left">Location</th>
                                <th align="right">Quantity</th>
                                <th align="left">Unit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="s_no" t-value="0"/>
                            <tr t-foreach="docs" t-as="line">
                                <t t-set="s_no" t-value="s_no+1"/>
                                <td align="left">
                                    <span t-esc="s_no"/>
                                </td>
                                <td align="left">
                                    <span t-esc="line['product'].default_code"/>
                                </td>
                                <td align="left">
                                    <span t-esc="line['product'].name"/>
                                </td>
                                <td align="left">
                                    <span t-esc="line['location']"/>
                                </td>
                                <td align="right">
                                    <span t-esc="line['qty_available']"/>
                                </td>
                                <td align="left">
                                    <span t-esc="line['uom_id']"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div style='border:1px solid #222;text-align:center;font-size:30px;color:#4D7CF7;padding:20px;'>
                        Total: <span t-esc="total"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>